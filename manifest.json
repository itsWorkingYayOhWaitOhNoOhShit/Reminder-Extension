{
    "manifest_version": 3,
    "name": "Reminder Extension",
    "version": "1.0",
    "description": "A Chrome extension to set reminders at regular intervals.",
    "permissions": [
      "alarms",
      "storage",
      "notifications"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
  